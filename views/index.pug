extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 My Portfolio

      p.lead.text-light
        | This portfolio is a collection of the first five Tech Degree Projects of the Full Stack JavaScript Tech Degree.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each data in projects
        .cell
          a(href=`/projects/${data.id}`)
            img.image(src=`${data.image_urls[0]}`)
            h5= data.project_name